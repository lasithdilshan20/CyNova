{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "outDir": "dist/plugin",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "src/plugin",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/plugin/**/*.ts"]
}
